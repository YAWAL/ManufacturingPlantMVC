<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="ManufacturingPlant" transaction-type="RESOURCE_LOCAL">
            <class>com.manufacturingPlant.virtualPlant.model.Employee</class>
            <class>com.manufacturingPlant.virtualPlant.model.DepartmentEmployee</class>
            <class>com.manufacturingPlant.virtualPlant.model.WorkshopEmployee</class>
            <class>com.manufacturingPlant.virtualPlant.model.Workshop</class>
            <class>com.manufacturingPlant.virtualPlant.model.Department</class>
            <class>com.manufacturingPlant.virtualPlant.model.Agent</class>
            <class>com.manufacturingPlant.virtualPlant.model.Tool</class>
            <class>com.manufacturingPlant.virtualPlant.model.Material</class>




        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost/manufacturing_plant" />
            <property name="hibernate.connection.username" value="root" />
            <property name="hibernate.connection.password" value="root" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>

    </persistence-unit>


</persistence>